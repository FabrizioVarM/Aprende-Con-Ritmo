{
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a user profile in the system.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the UserProfile entity."
        },
        "name": {
          "type": "string",
          "description": "Full name of the user."
        },
        "email": {
          "type": "string",
          "description": "Email address of the user.",
          "format": "email"
        },
        "role": {
          "type": "string",
          "description": "Role of the user (student, teacher, admin).",
          "enum": ["student", "teacher", "admin"]
        },
        "username": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        },
        "instruments": {
          "type": "array",
          "items": { "type": "string" }
        },
        "avatarSeed": {
          "type": "string"
        },
        "photoUrl": {
          "type": "string"
        }
      },
      "required": ["id", "name", "email", "role"]
    },
    "ClassSchedule": {
      "title": "ClassSchedule",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "teacherId": { "type": "string" },
        "studentId": { "type": "string" },
        "bookedBy": { "type": "string" },
        "time": { "type": "string" },
        "instrument": { "type": "string" },
        "type": { "type": "string", "enum": ["virtual", "presencial"] },
        "status": { "type": "string", "enum": ["pending", "completed"] },
        "isGroup": { "type": "boolean" },
        "students": { "type": "array", "items": { "type": "object" } },
        "teachers": { "type": "array", "items": { "type": "object" } }
      }
    },
    "AppSetting": {
      "title": "AppSetting",
      "type": "object",
      "properties": {
        "appLogoUrl": { "type": "string" },
        "darkMode": { "type": "boolean" },
        "whatsappNumber": { "type": "string" }
      }
    }
  },
  "auth": {
    "providers": ["password", "google.com"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "UserProfile",
          "schema": { "$ref": "#/backend/entities/UserProfile" },
          "description": "User profiles and academic data."
        }
      },
      {
        "path": "/users/{teacherId}/schedules/{scheduleId}",
        "definition": {
          "entityName": "ClassSchedule",
          "schema": { "$ref": "#/backend/entities/ClassSchedule" },
          "description": "Schedules for teachers."
        }
      },
      {
        "path": "/settings/global",
        "definition": {
          "entityName": "AppSetting",
          "schema": { "$ref": "#/backend/entities/AppSetting" },
          "description": "Global application settings."
        }
      }
    ]
  }
}
