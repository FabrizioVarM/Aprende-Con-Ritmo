
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Funciones de utilidad
    function isSignedIn() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAdmin() {
      return isSignedIn() && getUserData().role == 'admin';
    }

    function isTeacher() {
      return isSignedIn() && getUserData().role == 'teacher';
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Perfiles: Todos los autenticados leen, solo admin o el dueño escribe
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isAdmin() || isOwner(userId);
    }
    
    // Disponibilidad: Lectura pública (para ver horarios), escritura si eres admin, profe o el alumno que reserva
    match /availabilities/{availId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn(); 
    }
    
    // Completados, Hitos y Habilidades: Admin y Profes editan, Alumnos solo leen
    match /completions/{compId} {
      allow read: if isSignedIn();
      allow write: if isAdmin() || isTeacher();
    }

    match /milestones/{mileId} {
      allow read: if isSignedIn();
      allow write: if isAdmin() || isTeacher();
    }

    match /skills/{skillId} {
      allow read: if isSignedIn();
      allow write: if isAdmin() || isTeacher();
    }
    
    // Catálogo: Todos leen, solo admin edita
    match /resources/{resId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    // Ajustes: Lectura pública, solo admin edita
    match /settings/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
