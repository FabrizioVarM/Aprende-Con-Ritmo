
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAdmin() {
      return isSignedIn() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
             (getUserData().role == 'admin');
    }

    function isTeacher() {
      return isSignedIn() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
             (getUserData().role == 'teacher' || getUserData().role == 'admin');
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn(); 
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    match /availabilities/{availId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }
    
    match /completions/{compId} {
      allow read: if isSignedIn();
      allow write: if isTeacher();
    }

    match /milestones/{mileId} {
      allow read: if isSignedIn();
      allow write: if isTeacher();
    }

    match /skills/{skillId} {
      allow read: if isSignedIn();
      allow write: if isTeacher();
    }
    
    match /resources/{resId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /settings/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /notifications/{notifId} {
      // El usuario solo puede leer sus propias notificaciones
      allow read: if isSignedIn() && request.auth.uid == resource.data.recipientId;
      // Cualquier usuario autenticado puede crear una notificación (ej. al agendar)
      allow create: if isSignedIn();
      // Solo el destinatario puede marcar como leída o borrar su notificación
      allow update, delete: if isSignedIn() && request.auth.uid == resource.data.recipientId;
    }
  }
}
