rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    function isAdmin() {
      return isSignedIn() && (
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid)) ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
    }
    function isTeacher() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher';
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId) || isAdmin();
      
      match /schedules/{id} {
        allow read, write: if isSignedIn();
      }
      match /completions/{id} {
        allow read, write: if isSignedIn();
      }
      match /milestones/{id} {
        allow read, write: if isSignedIn();
      }
      match /skills/{id} {
        allow read, write: if isSignedIn();
      }
    }
    
    match /resources/{id} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /settings/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /roles_admin/{userId} {
      allow read: if isSignedIn();
      allow write: if false;
    }

    // Nuevas colecciones raíz usadas en los stores
    match /availabilities/{id} {
      allow read: if isSignedIn();
      allow write: if isSignedIn(); // Permitir reservas de alumnos y gestión de profes
    }

    match /completions/{id} {
      allow read: if isSignedIn();
      allow write: if isAdmin() || isTeacher();
    }

    match /milestones/{id} {
      allow read: if isSignedIn();
      allow write: if isAdmin() || isTeacher();
    }

    match /skills/{id} {
      allow read: if isSignedIn();
      allow write: if isAdmin() || isTeacher();
    }
  }
}
