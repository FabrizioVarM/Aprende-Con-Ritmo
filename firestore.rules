
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    function isAdmin() {
      return isSignedIn() && (
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid)) ||
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin')
      );
    }
    function isTeacher() {
      return isSignedIn() && (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher');
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId) || isAdmin();
    }
    
    match /resources/{id} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /settings/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /availabilities/{id} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    match /completions/{id} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    match /milestones/{id} {
      allow read: if isSignedIn();
      allow write: if isAdmin() || isTeacher();
    }

    match /skills/{id} {
      allow read: if isSignedIn();
      allow write: if isAdmin() || isTeacher();
    }
    
    match /roles_admin/{userId} {
      allow read: if isSignedIn();
      allow write: if false;
    }
  }
}
